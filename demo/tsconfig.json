{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "rootDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true, // Creates d.ts file alongside compile JS file
    "allowJs": true,
    "emitDeclarationOnly": true, 
    "declarationDir": "./lib",
  },
  "exclude": ["./dist", "./consumers"],
}

