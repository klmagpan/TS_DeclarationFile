// TS5055: Cannot write file because it would overwrite input file
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "rootDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true, // Creates d.ts file alongside compile JS file
    "allowJs": true, 
    "emitDeclarationOnly": true, // Only declaration is emitted, since it doesn't need to emit a JS file
    "declarationDir": "./lib", // Have declaration file emitted alongside existing JS file
  },
  "exclude": ["./dist", "./consumers"],
}

